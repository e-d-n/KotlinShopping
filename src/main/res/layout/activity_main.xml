<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_super_lightGray"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnToDept"
        android:onClick="onEnterDeptData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@color/color_Purple"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Enter Dept Data"
        android:textAllCaps="false"
        android:textColor="@color/color_White"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnViewDept"
        android:onClick="onViewDeptData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@color/color_lightGray"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="View Dept Data"
        android:textAllCaps="false"
        android:textColor="@color/color_Purple"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnToDept" />

    <Button
        android:id="@+id/btnToChild"
        android:onClick="onEnterItemData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@color/color_lightBlue"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Enter Item Data"
        android:textAllCaps="false"
        android:textColor="@color/color_White"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnViewDept" />

    <Button
        android:id="@+id/btnViewItem"
        android:onClick="onViewItemData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@color/color_lightGray"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="View Item Data"
        android:textAllCaps="false"
        android:textColor="@color/color_deepBlue"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnToChild" />

</android.support.constraint.ConstraintLayout>